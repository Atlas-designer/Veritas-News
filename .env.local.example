# Copy this file to .env.local and fill in your keys.
# None of these are required to run locally — the app falls back to demo data.

# NewsAPI — free tier at https://newsapi.org (100 requests/day)
NEWSAPI_KEY=your_newsapi_key_here

# Google Fact Check Tools API — free at https://developers.google.com/fact-check/tools/api
# Only used if FACT_CHECK_ENABLED is true in settings
GOOGLE_FACTCHECK_KEY=your_google_api_key_here

# Firebase — only needed for Firestore user overrides (EPIC 3.3)
NEXT_PUBLIC_FIREBASE_API_KEY=
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=
NEXT_PUBLIC_FIREBASE_PROJECT_ID=
NEXT_PUBLIC_FIREBASE_APP_ID=
